# ===================================
# API CREDENTIALS (Required)
# ===================================

# YouTube Data API v3 - Get from: https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY=your_youtube_api_key_here

# OpenAI API - Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Rumble Account
RUMBLE_EMAIL=your_rumble_email@example.com
RUMBLE_PASSWORD=your_rumble_password
RUMBLE_USERNAME=your_rumble_username

# YouTube OAuth (place client_secret.json in credentials/ directory)
YOUTUBE_CLIENT_SECRET_FILE=credentials/client_secret.json

# ===================================
# VIDEO PROCESSING
# ===================================

# Videos to process per session
MAX_VIDEOS_PER_SESSION=4

# Video duration filters (seconds)
MIN_VIDEO_DURATION=1800     # 30 minutes
MAX_VIDEO_DURATION=18000    # 5 hours
MAX_VIDEO_AGE_DAYS=365      # 1 year

# Download quality (2160=4K, 1080=Full HD, 720=HD)
DOWNLOAD_MAX_HEIGHT=2160
DOWNLOAD_PREFER_AV1=true
DOWNLOAD_MERGE_FORMAT=mkv

# ===================================
# SUBTITLES & TRANSCRIPTION
# ===================================

# Subtitle mode: 'exact' or 'off'
SUBTITLES_MODE=exact
WHISPER_MODEL=whisper-1

# ===================================
# AI METADATA GENERATION
# ===================================

# Use original title as reference for AI
METADATA_USE_ORIGINAL_TITLE=false
METADATA_FALLBACK_TITLE=Amazing Nature Moment

# ===================================
# RUMBLE UPLOAD
# ===================================

RUMBLE_UPLOAD_METHOD=playwright
RUMBLE_UPLOAD_ASYNC=true
RUMBLE_UPLOAD_TIMEOUT_MS=10800000

# Playwright browser settings
PLAYWRIGHT_BROWSER=chromium
PLAYWRIGHT_AUTO_INSTALL=true
PLAYWRIGHT_HEADLESS=false
PLAYWRIGHT_SLOWMO_MS=0

# ===================================
# YOUTUBE UPLOAD
# ===================================

YOUTUBE_MADE_FOR_KIDS=false
YOUTUBE_FORCE_SHORTS_HASHTAG=true
YOUTUBE_MIN_UPLOAD_INTERVAL=10
YOUTUBE_UPLOAD_MAX_RETRIES=3
YOUTUBE_UPLOAD_RETRY_BACKOFF_BASE=2.0

# ===================================
# FILE CLEANUP
# ===================================

DELETE_CLIP_AFTER_UPLOAD=true
CLEANUP_DELETE_BRANDED=true
CLEANUP_DELETE_ORIGINAL_DOWNLOAD=true

# ===================================
# ADVANCED CONFIGURATION (Optional)
# ===================================

# YouTube Channels (JSON format)
# YOUTUBE_CHANNELS_JSON={"channel1": "https://www.youtube.com/@channel1/videos"}

# Logo Configuration (JSON format)
# CHANNEL_LOGOS_JSON={"channel1": {"logo_path": "media/assets/logo.png", "location": "top_right", "spacing_x": 20, "spacing_y": 20}}
